{
  "ckg": {
    "host": "http://localhost:8529",
    "database": "ckg_db",
    "username": "root",
    "password": ""
  },
  "postgis": {
    "host": "localhost",
    "port": 5432,
    "database": "terra_constellata",
    "user": "postgres",
    "password": ""
  },
  "a2a": {
    "server_url": "http://localhost:8080",
    "agent_name": "inspiration_engine",
    "timeout": 30.0
  },
  "engine": {
    "cache_ttl_minutes": 60,
    "max_batch_size": 100,
    "novelty_threshold": 0.7,
    "default_algorithms": ["rpad", "peculiarity", "belief_change"],
    "algorithm_weights": {
      "rpad": 0.4,
      "peculiarity": 0.35,
      "belief_change": 0.25
    }
  },
  "novelty_algorithms": {
    "rpad": {
      "significance_threshold": 0.05,
      "min_support": 5
    },
    "peculiarity": {
      "base": 2.0
    },
    "belief_change": {
      "prior_belief_strength": 0.5
    }
  },
  "prompt_ranking": {
    "creative_weights": {
      "novelty": 0.4,
      "diversity": 0.3,
      "feasibility": 0.2,
      "impact": 0.1
    },
    "domain_factors": {
      "mythology": {
        "novelty_weight": 1.2,
        "creativity_multiplier": 1.1
      },
      "geography": {
        "novelty_weight": 1.0,
        "creativity_multiplier": 1.0
      },
      "cultural": {
        "novelty_weight": 1.1,
        "creativity_multiplier": 1.2
      },
      "narrative": {
        "novelty_weight": 0.9,
        "creativity_multiplier": 1.3
      },
      "visual": {
        "novelty_weight": 1.0,
        "creativity_multiplier": 1.1
      }
    }
  },
  "data_ingestion": {
    "default_limit": 1000,
    "spatial_cluster_distance": 0.1,
    "recent_data_window_hours": 24
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "logs/inspiration_engine.log"
  }
}