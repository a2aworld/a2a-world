# Template Dockerfile for Terra Constellata Data Gateway Agents
# Copy this file and customize AGENT_NAME for each agent

FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV AGENT_NAME={{AGENT_NAME}}

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set work directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy agent code
COPY agents/ ./agents/
COPY a2a_protocol/ ./a2a_protocol/

# Copy the specific agent file
COPY agents/data_gateway/generated_agents/{{AGENT_FILE}} ./agents/data_gateway/generated_agents/

# Create non-root user
RUN useradd --create-home --shell /bin/bash agent
RUN chown -R agent:agent /app
USER agent

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Expose port (if agent exposes HTTP endpoint)
EXPOSE 8000

# Default command - override in docker-compose or kubernetes
CMD ["python", "-c", "print('Agent container ready - customize CMD for specific agent')"]